{% extends "layouts/public.njk" %}

{% block head %}
  <link rel="stylesheet" href="/styles/home.css"/>

  <title>Bacana</title>
{% endblock %}

{% block content %}

  <ul class="tranding-container">
    {% for post in posts %}
      <li>
        <a href="/posts/{{post.id }}">
          <h5>{{ post.title }}</h5>
          <p>{{ post.resume }}</p>
          <span>{{ post.created_at }}</span>
        </a>
      </li>
    {% endfor %}
  </ul>

{% endblock %}
