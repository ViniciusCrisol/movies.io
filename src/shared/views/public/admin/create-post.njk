{% extends "layouts/admin.njk" %}

{% block content %}
  <form id="create_post" class="create-post">
    <h1>Criar novo post</h1>

    <label for="title">Título</label>
    <input name="title" id="title" required="required">

    <label for="resume">Resumo</label>
    <input name="resume" id="resume" required="required">

    <label for="content">Conteúdo</label>
    <textarea name="content" id="content" required="required"></textarea>

    <label for="thumbnail_url">Thumbnail URL</label>
    <input type="url" id="thumbnail_url" name="thumbnail_url" required="required">

    <button type="submit">Criar</button>
  </form>
{% endblock %}

{% block scripts %}
  <script src="/scripts/create-post.js"></script>
{% endblock %}
